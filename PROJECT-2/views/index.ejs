<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To-Do List</title>

  <style>
    body {
      margin: 0;
      font-family: "Segoe UI", system-ui, sans-serif;
      background: #f5f7fb;
      padding: 40px;
    }

    h1 {
      text-align: center;
      font-size: 36px;
      margin-bottom: 30px;
    }

    /* FORM CONTAINER */
    .todo-box {
      max-width: 900px;
      margin: auto;
      background: #ffffff;
      padding: 24px;
      border-radius: 14px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }

    form {
      display: flex;
      gap: 16px;
      align-items: center;
    }

    input {
      flex: 1;
      padding: 14px 16px;
      border-radius: 8px;
      border: 1px solid #d1d5db;
      font-size: 15px;
      outline: none;
    }

    input:focus {
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
    }

    button {
      background: #2563eb;
      color: #fff;
      padding: 14px 28px;
      font-size: 15px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 500;
    }

    button:hover {
      background: #1e40af;
    }

    /* TASK LIST */
    .task-list {
      max-width: 900px;
      margin: 40px auto 0;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .task-card {
      background: #fff;
      padding: 20px;
      border-radius: 14px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .task-row {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      gap: 20px;
      margin-bottom: 15px;
    }

    .task-row p {
      margin: 0;
      font-size: 15px;
    }

    .task-row span {
      font-weight: 600;
    }

    .actions {
      display: flex;
      gap: 12px;
    }

    .edit {
      background: #22c55e;
    }

    .edit:hover {
      background: #15803d;
    }

    .delete {
      background: #ef4444;
    }

    .delete:hover {
      background: #b91c1c;
    }
  </style>
</head>

<body>

  <h1>üìù To-Do List</h1>

  <!-- ADD TASK -->
  <div class="todo-box">
    <form action="/addData" method="post">
      <input type="text" name="task" placeholder="Task title" required>
      <input type="text" name="priority" placeholder="Priority (High / Medium / Low)">
      <input type="text" name="status" placeholder="Status (Pending / Completed)">
      <button type="submit">Add</button>
    </form>
  </div>

  <!-- TASKS -->
  <div class="task-list">
    <% data.map((e,i)=>{ %>
      <div class="task-card">

        <div class="task-row">
          <p><span>Task:</span> <%= e.task %></p>
          <p><span>Priority:</span> <%= e.priority %></p>
          <p><span>Status:</span> <%= e.status %></p>
        </div>

        <div class="actions">
          <a href="/editData?id=<%= e.id %>">
            <button class="edit">Edit</button>
          </a>

          <a href="/deleteData/<%= e.id %>">
            <button class="delete">Delete</button>
          </a>
        </div>

      </div>
    <% }) %>
  </div>

</body>
</html>